@page
@model Donation.IndexModel


<h1>
    Сервис благотворительных взносов для бездомных животных
</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PaymentList.Amount" class="control-label"></label>
                <input asp-for="PaymentList.Amount" class="form-control" />
                <span asp-validation-for="PaymentList.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentList.Description" class="control-label"></label>
                <input asp-for="PaymentList.Description" class="form-control" />
                <span asp-validation-for="PaymentList.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Пожертвовать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
